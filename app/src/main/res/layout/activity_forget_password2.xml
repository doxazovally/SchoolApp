<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="30dp"
    tools:context=".forgetPassword2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/fp2_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:padding="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make\nselection"
            android:textColor="@color/colorPrimary"
            android:textSize="35sp"
            android:textAllCaps="true"
            android:layout_marginTop="30dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select the contact method to reset your password"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_marginTop="2dp"/>

       <RelativeLayout
           android:layout_width="350dp"
           android:layout_height="90dp"
           android:layout_marginTop="30dp"
           android:background="@drawable/button_11"
           android:padding="10dp">


           <ImageView
               android:id="@+id/contact_Mtd_Mobile"
               android:layout_width="65dp"
               android:layout_height="65dp"
               android:src="@drawable/ic_phone_android_black_24dp"
               android:layout_centerVertical="true"
               android:layout_marginStart="20dp"/>


           <TextView
               android:id="@+id/Mobile_Mtd_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="via sms"
               android:textColor="@color/colorPrimaryDark"
               android:textSize="18sp"
               android:layout_marginTop="4dp"
               android:layout_toRightOf="@id/contact_Mtd_Mobile"/>


           <TextView
               android:id="@+id/Mobile_Mtd_description"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="+2348147456799"
               android:textColor="@color/colorPrimaryDark"
               android:textSize="18sp"
               android:layout_toRightOf="@id/contact_Mtd_Mobile"
               android:layout_below="@id/Mobile_Mtd_title"/>


           <Button
               android:id="@+id/password_reset_mobile"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#00000000"/>


       </RelativeLayout>

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_11"
            android:padding="10dp">


            <ImageView
                android:id="@+id/contact_Mtd_Email"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/ic_email"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"/>


            <TextView
                android:id="@+id/Email_Mtd_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="via email"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/contact_Mtd_Email"
                android:layout_marginStart="10dp"/>


            <TextView
                android:id="@+id/Email_Mtd_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="support@gmail.com"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_toRightOf="@id/contact_Mtd_Email"
                android:layout_below="@id/Email_Mtd_title"
                android:layout_marginStart="10dp"/>

            <Button
                android:id="@+id/password_reset_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"/>


        </RelativeLayout>



    </LinearLayout>

</ScrollView>



