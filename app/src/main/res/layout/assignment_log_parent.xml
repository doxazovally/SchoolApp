<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="17dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="@color/colorPrimary"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/assignmentLogIdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment ID: 12345"
            android:padding="3dp"
            android:layout_marginStart="2dp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/roboto_slab"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/assignmentLogDateGivenTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:text="01/06/2020"
            android:fontFamily="@font/salsa"
            android:padding="3dp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/assLogSubjectTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assignmentLogIdTv"
            android:text="Subject"
            android:fontFamily="@font/roboto_slab"
            android:textStyle="bold"
            android:padding="3dp"
            android:layout_marginStart="2dp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/assignmentLogTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assLogSubjectTv"
            android:text="Topic"
            android:fontFamily="@font/salsa"
            android:padding="3dp"
            android:layout_marginStart="2dp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/assignmentStatusTv"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assLogSubjectTv"
            android:padding="3dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:background="@drawable/shape_rec_04"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:text="In Progress"
            android:fontFamily="@font/salsa"
            android:textColor="@color/colorPrimaryDark"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>