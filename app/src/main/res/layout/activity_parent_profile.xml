<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101625"
    android:padding="25dp"
    tools:context=".parentProfile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <ImageView
        android:id="@+id/parent_profile_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:src="@drawable/ic_arrow_back_black_24dp" />


    <TextView
        android:id="@+id/update_P_Acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="20sp"
        android:text="Update\nprofile"
        android:textAllCaps="true"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="27sp"
        android:transitionName="transition_createAcc_text" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/PU_PPpic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="47dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/ic_person_black_24dp"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="1dp" />

            <EditText
                android:id="@+id/PU_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/PU_PPpic"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/button_10"
                android:drawableStart="@drawable/ic_profile_blue"
                android:drawablePadding="5dp"
                android:hint="Name"
                android:inputType="textPersonName|textCapWords"
                android:padding="13dp"
                android:fontFamily="@font/roboto_medium"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"/>


            <EditText
                android:id="@+id/PU_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/PU_name"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="24dp"
                android:background="@drawable/button_10"
                android:drawableStart="@drawable/ic_call"
                android:drawablePadding="5dp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:fontFamily="@font/roboto_medium"
                android:padding="13dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"/>



            <Button
                android:id="@+id/Update_PU_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/PU_phone"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button2"
                android:fontFamily="@font/roboto_slab"
                android:minWidth="120dp"
                android:text="Update Profile"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        </RelativeLayout>




    </LinearLayout>


</ScrollView>