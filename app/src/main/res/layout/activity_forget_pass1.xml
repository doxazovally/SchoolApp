<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="30dp"
    tools:context=".forgetPass1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/fp1_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_arrow_back_black_24dp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lock_outline_black_24dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget\nPassword"
            android:textColor="@color/colorPrimary"
            android:textSize="35sp"
            android:textAllCaps="true"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:gravity="center"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Provide Your Account's Email For Which\nYou Will Like To Reset Your Password"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/P_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter email"
            app:startIconDrawable="@drawable/ic_email"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            app:boxBackgroundColor="@color/colorPrimary"
            app:startIconTint="@color/colorPrimaryDark"
            app:endIconTint="@color/colorPrimaryDark"
            app:endIconMode="clear_text"
            app:passwordToggleTint="@color/colorPrimaryDark"
            app:hintTextColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            app:boxStrokeColor="@color/colorPrimaryDark"
            app:boxStrokeWidthFocused="2dp"
            android:layout_marginTop="70dp">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimaryDark"/>


        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/forgetPass_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="next"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/shape_rec_04"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:transitionName="forgetPassNextBtn"/>



    </LinearLayout>

</ScrollView>